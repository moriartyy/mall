<?xml version="1.0" encoding="utf-8" ?>
<templates>
    <template>
        <!-- 注意: 实体类无论如何都会生成 -->
        <!-- 1.5.x 开始 configName=domain的配置会被特殊处理, 其他配置跟随实体的配置-->
        <!-- 主要用于生成 request,response 类型的对象 -->
        <property name="configName" value="domain"/>
        <property name="configFile" value="domain.ftl"/>
        <property name="fileName" value="${domain.fileName}"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${domain.basePackage}.domain"/>
        <property name="encoding" value="${domain.encoding}"/>
        <property name="basePath" value="${domain.basePath}"/>
    </template>
    <template>
        <property name="configName" value="basePackageInfo"/>
        <property name="configFile" value="basePackageInfo.ftl"/>
        <property name="fileName" value="package-info"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${domain.basePackage}"/>
        <property name="encoding" value="${domain.encoding}"/>
        <property name="basePath" value="${domain.basePath}"/>
    </template>
    <template>
        <property name="configName" value="po"/>
        <property name="configFile" value="po.ftl"/>
        <property name="fileName" value="default"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${domain.basePackage}..infrastructure.mysql.po"/>
        <property name="encoding" value="${domain.encoding}"/>
        <property name="basePath" value="${domain.basePath}"/>
    </template>
    <template>
        <property name="configName" value="dto"/>
        <property name="configFile" value="dto.ftl"/>
        <property name="fileName" value="${domain.fileName}Info"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${domain.basePackage}.api.dto"/>
        <property name="encoding" value="${domain.encoding}"/>
        <property name="basePath" value="${domain.basePath}"/>
    </template>
    <template>
        <property name="configName" value="repositoryImpl"/>
        <property name="configFile" value="repositoryImpl.ftl"/>
        <property name="fileName" value="Mysql${domain.fileName}Repository"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${domain.basePackage}.infrastructure.mysql.repository"/>
        <property name="encoding" value="${domain.encoding}"/>
        <property name="basePath" value="${domain.basePath}"/>
    </template>
    <template>
        <property name="configName" value="mapperInterface"/>
        <property name="configFile" value="mapperInterface.ftl"/>
        <property name="fileName" value="${domain.fileName}Mapper"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${domain.basePackage}.infrastructure.mysql.mapper"/>
        <property name="encoding" value="${domain.encoding}"/>
        <property name="basePath" value="${domain.basePath}"/>
    </template>
    <template>
        <property name="configName" value="mapperXml"/>
        <property name="configFile" value="mapperXml.ftl"/>
        <property name="fileName" value="${domain.fileName}Mapper"/>
        <property name="suffix" value=".xml"/>
        <property name="packageName" value="mapper"/>
        <property name="encoding" value="${domain.encoding}"/>
        <property name="basePath" value="src/main/resources"/>
    </template>
</templates>
